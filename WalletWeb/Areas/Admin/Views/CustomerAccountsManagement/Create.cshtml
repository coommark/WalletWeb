
@model WalletWeb.Models.ViewModels.Requests.CustomerAccountCreateViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="main-content">
    <div class="row mb-4">
        <div class="col mb-3">
            <div class="card text-left">
                <div class="card-header bg-transparent">
                    <div class="row" style="align-items: center;">
                        <div class="col-md-6">
                            <div class="ul-card-widget__head-label">
                                <h5 class="text-18 font-weight-700 card-title">Create Customer Account</h5>
                            </div>
                        </div>
                       
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        @Html.HiddenFor(model => model.ApplicationUserId)
                        @Html.HiddenFor(model => model.AccountTypeId)
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 mb-3"></div>
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="ApplicationUserId"></label>
                                <input type="text" id="UserName" name="UserName" class="form-control" />
                                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="AccountTypeId"></label>
                                <input type="text" id="AccountType" name="AccountType" class="form-control" />
                                <span asp-validation-for="AccountTypeId" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 text-right">
                                <button class="btn btn-primary">Create Account</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#UserName').autocomplete({
                source: '/Admin/UserManagement/Search/',
                select: function (e, ui) {
                    $("#ApplicationUserId").val(ui.item.val);
                    this.value = ui.item.value;
                    return false;
                }
            });
            $('#AccountType').autocomplete({
                source: '/Admin/AccountTypesManagement/Search/',
                select: function (e, ui) {
                    $("#AccountTypeId").val(ui.item.val);
                    this.value = ui.item.value;
                    return false;
                }
            });
        });
    </script>
 }