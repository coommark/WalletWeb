
@model WalletWeb.Models.ViewModels.Requests.AccountTypeCreateViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="main-content">
    <div class="row mb-4">
        <div class="col mb-3">
            <div class="card text-left">
                <div class="card-header bg-transparent">
                    <div class="row" style="align-items: center;">
                        <div class="col-md-6">
                            <div class="ul-card-widget__head-label">
                                <h5 class="text-18 font-weight-700 card-title">Create Account Category</h5>
                            </div>
                        </div>
                        <div class="text-right col-md-6">
                            <a href="@Url.Action("Create", "AccountTypesManagement")" class="btn btn-outline-primary" type="button">Add New</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 mb-3"></div>
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Type"></label><span class="text-danger"> *</span>
                                @Html.DropDownListFor(model => model.Type, (IEnumerable<SelectListItem>)ViewBag.AccountType, new { @class = "form-control" })

                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="CategoryCode"></label>
                                <input asp-for="CategoryCode" class="form-control" />
                                <span asp-validation-for="CategoryCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="MinimumBalance"></label>
                                <input asp-for="MinimumBalance" class="form-control" />
                                <span asp-validation-for="MinimumBalance" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="Description"></label><br />
                                  <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-12 text-right">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
