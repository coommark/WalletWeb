@model WalletWeb.Models.ViewModels.Requests.AccountStatusCreateViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Set Status";
}

<div class="main-content">
    <div class="row mb-4">
        <div class="col mb-3">
            <div class="card text-left">
                <div class="card-header bg-transparent">
                    <div class="row" style="align-items: center;">
                        <div class="col-md-6">
                            <div class="ul-card-widget__head-label">
                                <h5 class="text-18 font-weight-700 card-title">Send Message</h5>
                            </div>
                        </div>
                       
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="SetStatus">
                        @Html.HiddenFor(model => model.CustomerAccountId)
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 mb-3"></div>
                        <div class="row">
                            <div class="col-12 form-group mb-3">
                                <label asp-for="Status"></label><span class="text-danger"> *</span>
                                @Html.DropDownListFor(model => model.Status, (IEnumerable<SelectListItem>)ViewBag.Status, new { @class = "form-control" })
                            </div>

                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="Comment"></label><br />
                                <textarea asp-for="Comment" rows="5" class="form-control"></textarea>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 text-right">
                                <button class="btn btn-primary">Update Status</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

