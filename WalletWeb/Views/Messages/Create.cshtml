@model WalletWeb.Models.ViewModels.Requests.MessageCreateViewModel
@{
    ViewData["Title"] = "Send Message";
}

<div class="main-content">
    <div class="row mb-4">
        <div class="col mb-3">
            <div class="card text-left">
                <div class="card-header bg-transparent">
                    <div class="row" style="align-items: center;">
                        <div class="col-md-6">
                            <div class="ul-card-widget__head-label">
                                <h5 class="text-18 font-weight-700 card-title">Send Message</h5>
                            </div>
                        </div>
                        <div class="text-right col-md-6">
                            <a href="@Url.Action("Create", "Messages")" class="btn btn-outline-primary" type="button">New Message</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 mb-3"></div>
                        <div class="row">
                            <div class="col-12 form-group mb-3">
                                <label asp-for="Type"></label><span class="text-danger"> *</span>
                                @Html.DropDownListFor(model => model.Type, (IEnumerable<SelectListItem>)ViewBag.MessageType, new { @class = "form-control" })
                            </div>                            

                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="Body"></label><br />
                                <textarea asp-for="Body" rows="5" class="form-control"></textarea>
                                <span asp-validation-for="Body" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 text-right">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

