@model WalletWeb.Models.ViewModels.Requests.StatementRequestViewModel
@{
    ViewData["Title"] = "Set Status";
}

<div class="main-content">
    <div class="row mb-4">
        <div class="col mb-3">
            <div class="card text-left">
                <div class="card-header bg-transparent">
                    <div class="row" style="align-items: center;">
                        <div class="col-md-6">
                            <div class="ul-card-widget__head-label">
                                <h5 class="text-18 font-weight-700 card-title">Customer Transactions Report request form</h5>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="AccountStatement" target="_blank">
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 mb-3"></div>
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label>From (Start Date)</label>
                                <input asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label>To (End Date)</label>
                                <input asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="AccountNumber"></label>
                                @Html.DropDownListFor(model => model.AccountNumber, (IEnumerable<SelectListItem>)ViewBag.Accounts, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label></label>
                                @Html.DropDownListFor(model => model.Format, (IEnumerable<SelectListItem>)ViewBag.Format, new { @class = "form-control" })
                            </div>
                            <div class="col-md-12 text-right">
                                <button class="btn btn-primary">Generate Report</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

